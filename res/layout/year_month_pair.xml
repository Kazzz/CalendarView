<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
 android:layout_marginLeft="50dp"
>
 <LinearLayout
  android:orientation="vertical"
  android:id="@+id/llColumnYear"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginLeft="50dp"
 >
  <TextView
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_gravity="center"
   android:text="@string/guidance_year"
  ></TextView>
  <org.kazzz.view.numberpicker.NumberPicker
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:id="@+id/pickerYear" />
 </LinearLayout>
 <LinearLayout
  android:orientation="vertical"
  android:layout_height="fill_parent"
  android:id="@+id/llColumnMonth"
  android:layout_width="wrap_content"
 >
  <TextView
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_gravity="center"
   android:text="@string/guidance_month"
  ></TextView>
  <org.kazzz.view.numberpicker.NumberPicker
   android:layout_width="70dip"
   android:layout_height="wrap_content"
   android:id="@+id/pickerMonth" />

 </LinearLayout>

</LinearLayout>
